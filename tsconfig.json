{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "importHelpers": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "noImplicitAny": true,
    "outDir": "./build",
    "lib": [
      "scripthost"
    ],
    "types": [
      "node",
      "jasmine"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "App/*": [
        "App/src/*"
      ],
      "Core/*": [
        "Core/src/*"
      ],
      "Infrastructure/*": [
        "NodeInfrastructure/src/*"
      ]
    }
  },
  "include": [
    "App/src/**/*",
    "Core/src/**/*",
    "NodeInfrastructure/src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  }
}
